<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView android:layout_width="@dimen/image_thumb_width" android:layout_height="@dimen/image_thumb_height"
        android:layout_marginLeft="@dimen/thumb_padding_left"
        android:layout_marginStart="@dimen/thumb_padding_left"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/thumb_padding_right"
        android:layout_marginRight="@dimen/thumb_padding_right"
        android:layout_marginTop="@dimen/thumb_padding_vertical"
        android:layout_marginBottom="@dimen/thumb_padding_vertical"
        android:id="@+id/list_thumb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/image_thumb_height"
        android:layout_alignTop="@+id/list_thumb"
        android:layout_toRightOf="@+id/list_thumb"
        android:layout_toEndOf="@+id/list_thumb"
        android:gravity="center_vertical"
        android:id="@+id/list_text"/>


</RelativeLayout>